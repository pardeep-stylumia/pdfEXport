<!DOCTYPE html>
<html>
<head>
<style>
.title{
	text-align: center;
	margin: auto;
}
.product-card, .css-1y8mk30-SkeletonTheme{
  width: 100%;
  height: 100%;
  border-radius: 4px;
  background-color: #ffffff;
  padding: 10px;
  border: 1px solid white;
  box-sizing: border-box;
}


.product-img-case {
  overflow: hidden;
  display: grid;
  /* justify-content: center; */
  height: 100%;
  /* max-width: 200px; */
}


.product-card:hover {
  box-shadow: 0 3px 16px 0 rgba(0,0,0,.11);
  cursor: pointer;
  transition: box-shadow .2s ease-in-out;
}

.product-card:hover .card-hover-container {
  opacity: 1;
}

.product-img-container>img {
  width: 100%;
  width: 225px;
  height: 300px;
  display: table;
  margin: 0 auto;
}


.product-name-container {
  text-transform: capitalize;
  margin-top: 14px;
  font-family: Rubik;
  font-size: 9px;
  font-weight: normal;
  font-style: normal;
  font-stretch: normal;
  line-height: 1.5;
  letter-spacing: normal;
  color: #41415b;
  margin-bottom: 2px;
  height: 13px;
  overflow: hidden;
}
a {
    text-decoration: none;
}
.product-brand-container {
  font-family: Rubik;
  font-size: 9px;
  font-weight: normal;
  font-style: normal;
  font-stretch: normal;
  line-height: 1.5;
  letter-spacing: normal;
  color: #5F5F79;
  margin-bottom: 6px;
}

.product-price-container {
  margin-bottom: 6px;
  display: flex;
  align-items: baseline;
  display: -webkit-box;
display: -webkit-flex;
-webkit-flex-wrap: wrap;
justify-content: center;
-webkit-justify-content: center;
}

.product-price-container>div {
  margin-right: 4px;
}

.product-price-container-sp {
  font-family: Rubik;
  font-size: 9px;
  font-weight: 500;
  font-style: normal;
  font-stretch: normal;
  line-height: 1.17;
  letter-spacing: normal;
  color: #5f5f79;
}

.product-price-container-mrp {
  font-family: Rubik;
  font-size: 9px;
  font-weight: normal;
  font-style: normal;
  text-decoration: line-through;
  font-stretch: normal;
  line-height: normal;
  letter-spacing: normal;
  color: #7c7c96;
}

.product-price-container-discount {
  font-family: Rubik;
  font-size: 9px;
  font-weight: normal;
  font-style: normal;
  font-stretch: normal;
  line-height: normal;
  letter-spacing: normal;
  color: #ff79af;
}

.product-details-container {
  /* margin-bottom: 20px; */
  display: flex;
  align-items: center;
}


.product-price-container-rank {
  font-family: Rubik;
  display: grid;
  justify-content: center;
  align-items: center;
  font-size: 9px;
  font-weight: 500;
  font-style: normal;
  font-stretch: normal;
  line-height: normal;
  letter-spacing: normal;
  color: #ff79af;
  width: 48px;
  height: 20px;
  border-radius: 4px;
  border: solid 1px rgba(255, 121, 175, 0.1);
  background-color: rgba(255, 121, 175, 0.08);
}

.product-price-container-time {
  font-family: Rubik;
  font-size: 9px;
  color: #41415b;
  margin: auto;
}

.card-hover-container {
  -webkit-transition: .5s ease;
  transition: .5s ease;
  opacity: 0;
  position: relative;
  bottom: 50px;
  text-align: center;
  width: 101%;
  margin: 0 auto;
  box-sizing: border-box;
  display: grid;
  grid-template-columns: auto auto;
  align-items: center;
  justify-content: space-around;
  background: white;
  border-top: 1px solid #f3f3f3;
  padding: 10px 0px;
}

.add-to-board-and-download {
  display: grid;
  grid-template-columns: auto auto;
  justify-content: space-around;
}

.add-to-favourites>img {
  width: 24px;
  height: 24px;
}




.vs-icon {
  display: grid;
  justify-items: flex-end;
}

.vs-icon>img {
  background: #fff;
}

.download-picture {
  display: none;
}

.download-picture>img {
  background: white;
}

.download-picture>a>img {
  background: white;
}


.search-results {
display: table;

}

.card-product{
  page-break-inside: avoid;
  display: inline-block;
  position: relative;
  z-index: 10;
  -webkit-box-shadow: 0 3px 16px 0 rgba(0,0,0,.11); 
  box-shadow: 0 3px 16px 0 rgba(0,0,0,.11);
  width: 200px;
	margin: 10px;
  break-inside: avoid!important;
  overflow: visible;
}

</style>
</head>
<body>
	<center>
		<% if(details && Object.keys(details).length>0) {%>
		<% if(details.title) { %>
		<div class="title"><%= details.title %></div>	
		<% }%>
		<% if(details.board_images && details.board_images.length>0) {%>
			<div id="search-results" class="search-results">
			<% details.board_images.forEach(data => {%>
		<a class="card-product" href="https://mit.stylumia.com/collection/detail/product/<%= data.product_id %>" target="_blank"> 
			<div  class="product-card">
				<div style="height: 200px;">
	
					<div class="product-img-case" style="background-image: url(<%= data.feature_image %>); background-position: bottom; background-repeat: no-repeat; background-size: contain;">
						
					</div>
					</div>

					<div title="<%= data.product_name %>" class="product-name-container">
						<% if(data.product_name && data.product_name.length > 50) { %>
							<%= data.product_name.slice(0, 50) %> ... 
							<% } else if(data.product_name) { %>
								<%= data.product_name %>  
							<% } %>
					</div>
					 <div class="product-brand-container">
						<div><%= data.brand %> </div>
						<div style="font-weight: 600"><%= data.channel %> </div>
					</div>
					<div class="product-price-container">
						<div class="product-price-container-sp"><%= Object.keys(data['selling_price']) %> <%= data['selling_price'][Object.keys(data['selling_price'])] %></div>
						
						<% if(data.discount && data.discount > 0) { %>
								
              <div class="product-price-container-mrp"><%= Object.keys(data['mrp']) %> <%= data['mrp'][Object.keys(data['mrp'])] %></div>
              <div class="product-price-container-discount"><%= data.discount.toFixed(2) %>%</div>
            
              <% } %>
             
	
          </div> 
          <div class="product-details-container">
                
            <div class="product-price-container-time"><%= data.launch_on %></div>
          </div> 
					</div>
		</a>
	<% })%>
</div><%}} %>
	</center>
</body>
</html>

